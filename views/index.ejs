    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // ==========================================
        // 1. G√úVENLƒ∞ VERƒ∞ ALIMI
        // ==========================================
        let subeVerileri = [], kampanyaVerileri = [], trendVeri = null, matrisVeri = [];

        try {
            subeVerileri = <%- typeof subeData !== 'undefined' ? JSON.stringify(subeData) : '[]' %>;
            kampanyaVerileri = <%- typeof kampanyaData !== 'undefined' ? JSON.stringify(kampanyaData) : '[]' %>;
            trendVeri = <%- typeof trendData !== 'undefined' ? JSON.stringify(trendData) : 'null' %>;
            matrisVeri = <%- typeof matrisData !== 'undefined' ? JSON.stringify(matrisData) : '[]' %>;
            
            console.log("Trend Verisi:", trendVeri);
            console.log("Matris Verisi:", matrisVeri);
        } catch (e) {
            console.error("Veri hatasƒ±:", e);
        }

        // ==========================================
        // 2. TREND GRAFƒ∞ƒûƒ∞ (FORECAST)
        // ==========================================
        if (document.getElementById('trendChart') && trendVeri) {
            // Etiketleri (X Ekseni) Birle≈ütir
            const labels = [
                ...trendVeri.gecmis.map(d => d.ay), 
                ...trendVeri.gelecek.map(d => d.ay)
            ];

            // Ge√ßmi≈ü Verisi: Gelecek kƒ±smƒ± null olmalƒ±
            const dataGecmis = [
                ...trendVeri.gecmis.map(d => d.ciro), 
                ...trendVeri.gelecek.map(() => null)
            ];

            // Gelecek Verisi: Ge√ßmi≈ü kƒ±smƒ± null olmalƒ±
            // Baƒülantƒ± kopuk olmasƒ±n diye ge√ßmi≈üin son deƒüerini geleceƒüin ba≈üƒ±na ekliyoruz (g√∂rsel hile)
            const sonGecmis = trendVeri.gecmis.length > 0 ? trendVeri.gecmis[trendVeri.gecmis.length-1].ciro : 0;
            
            const dataGelecek = Array(trendVeri.gecmis.length - 1).fill(null);
            dataGelecek.push(sonGecmis); // Baƒülantƒ± noktasƒ±
            trendVeri.gelecek.forEach(d => dataGelecek.push(d.ciro));

            new Chart(document.getElementById('trendChart'), {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Ger√ßekle≈üen',
                            data: dataGecmis,
                            borderColor: '#2563eb',
                            backgroundColor: '#2563eb',
                            tension: 0.3,
                            pointRadius: 3
                        },
                        {
                            label: 'Tahmin (AI)',
                            data: dataGelecek,
                            borderColor: '#f59e0b',
                            backgroundColor: '#f59e0b',
                            borderDash: [5, 5], // Kesikli √áizgi
                            tension: 0.3,
                            pointRadius: 3
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: { intersect: false, mode: 'index' },
                    plugins: { 
                        legend: { position: 'top' },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': ' + Number(context.raw).toLocaleString('tr-TR') + ' ‚Ç∫';
                                }
                            }
                        }
                    },
                    scales: {
                        y: { beginAtZero: false, grid: { color: '#f3f4f6' } },
                        x: { grid: { display: false } }
                    }
                }
            });
        }

        // ==========================================
        // 3. KATEGORƒ∞ MATRƒ∞Sƒ∞ (BUBBLE CHART)
        // ==========================================
        if (document.getElementById('matrixChart') && matrisVeri.length > 0) {
            new Chart(document.getElementById('matrixChart'), {
                type: 'bubble',
                data: {
                    datasets: matrisVeri
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom', labels: { boxWidth: 10, padding: 10 } },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const v = context.raw;
                                    return `${context.dataset.label} | Hacim: ${v.x}, Marj: %${v.y}`;
                                }
                            }
                        }
                    },
                    scales: {
                        x: { 
                            title: { display: true, text: 'Satƒ±≈ü Adedi (Hacim)' },
                            grid: { color: '#f3f4f6' },
                            beginAtZero: true
                        },
                        y: { 
                            title: { display: true, text: 'K√¢r Marjƒ± (%)' },
                            grid: { color: '#f3f4f6' },
                            min: 0,
                            max: 100
                        }
                    }
                }
            });
        } else if(document.getElementById('matrixChart')) {
             // Veri yoksa mesaj bas
             console.warn("Matrix verisi bo≈ü!");
        }

        // ==========================================
        // 4. KAMPANYA PASTASI
        // ==========================================
        if (document.getElementById('pieChart') && kampanyaVerileri.length > 0) {
            new Chart(document.getElementById('pieChart'), {
                type: 'doughnut',
                data: {
                    labels: kampanyaVerileri.map(d => d.kampanya_adi),
                    datasets: [{
                        data: kampanyaVerileri.map(d => d.islem_sayisi),
                        backgroundColor: ['#3b82f6', '#10b981', '#f59e0b', '#ef4444'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { position: 'bottom', labels: { boxWidth: 10 } } },
                    cutout: '65%'
                }
            });
        }

        // ==========================================
        // 5. HARƒ∞TA (MAP)
        // ==========================================
        if (document.getElementById('map')) {
            var map = L.map('map').setView([38.44, 27.15], 10);
            L.tileLayer('https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png', { attribution: '¬©OpenStreetMap' }).addTo(map);

            const icons = {
                red: new L.Icon({ iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-red.png', shadowUrl: 'https://unpkg.com/leaflet@1.9.4/dist/images/marker-shadow.png', iconSize: [25, 41], iconAnchor: [12, 41], popupAnchor: [1, -34], shadowSize: [41, 41] }),
                green: new L.Icon({ iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-green.png', shadowUrl: 'https://unpkg.com/leaflet@1.9.4/dist/images/marker-shadow.png', iconSize: [25, 41], iconAnchor: [12, 41], popupAnchor: [1, -34], shadowSize: [41, 41] }),
                gold: new L.Icon({ iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-gold.png', shadowUrl: 'https://unpkg.com/leaflet@1.9.4/dist/images/marker-shadow.png', iconSize: [25, 41], iconAnchor: [12, 41], popupAnchor: [1, -34], shadowSize: [41, 41] })
            };

            const koordinatBul = (isim) => {
                const ad = isim.toLowerCase();
                if(ad.includes('agora')) return [38.3954, 27.0530];
                if(ad.includes('westpark')) return [38.4865, 27.1794];
                if(ad.includes('bornova') || ad.includes('forum')) return [38.4499, 27.2104];
                if(ad.includes('optimum')) return [38.3387, 27.1352];
                if(ad.includes('hilltown')) return [38.4795, 27.0746];
                if(ad.includes('karsiyaka') || ad.includes('cadde')) return [38.4573, 27.1165];
                if(ad.includes('mavibahce') || ad.includes('mavi')) return [38.4739, 27.0743];
                if(ad.includes('istinye')) return [38.3920, 27.0280];
                return null;
            };

            subeVerileri.forEach(sube => {
                let coord = sube.coords;
                if (!coord || coord.length !== 2) coord = koordinatBul(sube.sube_adi);

                if (coord) {
                    let iconToUse = icons.gold;
                    if(sube.renk === 'success') iconToUse = icons.green;
                    if(sube.renk === 'danger') iconToUse = icons.red;

                    L.marker(coord, { icon: iconToUse }).addTo(map)
                        .bindPopup(`<strong style="color:#333">${sube.sube_adi.replace('SuperStep ‚Äì ', '')}</strong><br>Tahmin: ${parseFloat(sube.tahmini_ciro).toLocaleString('tr-TR')} ‚Ç∫`);
                }
            });
        }


        
    </script>
